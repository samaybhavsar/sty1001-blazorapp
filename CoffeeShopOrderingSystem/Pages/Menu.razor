@page "/menu"

@inherits AddItemBase.AddItemBase;

<PageTitle>Menu</PageTitle>

   


<h2 class="text-center">Menu Items</h2>
<div class="container-fluid">
    <div class="row">

        @foreach (var item in GetItems())
            {
            <div class="col-md-3 text-center">
                <a href="/item-detail/@item.ItemId"><img src="/images/@item.ItemImage" style="width:50%" alt="@item.ItemName" title="@item.ItemName" /></a>
                <div class="item-name">@item.ItemName</div>
                <div class="price">@item.ItemPrice</div>
            </div>
            }
           
        </div>
</div>

